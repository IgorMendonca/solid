{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "prepare": "cd .. && husky install api/.husky",
    "test": "jest --passWithNoTests --silent --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "yarn test --watch -c jest-unit-config.ts",
    "test:integration": "yarn test --watch -c jest-integration-config.ts",
    "test:staged": "yarn test --findRelatedTests .src",
    "test:ci": "yarn test --coverage"
  },
  "lint-staged": {
    "*.ts": [
      "eslint 'src/**' --fix",
      "yarn test:staged"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.2.0",
    "@types/node": "^18.11.5",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "git-commit-msg-linter": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "^29.2.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
